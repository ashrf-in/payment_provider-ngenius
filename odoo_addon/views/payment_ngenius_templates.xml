<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- N-Genius Redirect Template -->
    <template id="redirect_form">
        <!-- 
            We use a standard GET form because:
            1. Odoo JS expects a form element.
            2. N-Genius HPP requires a GET request.
            3. We render query params (like 'code') as hidden inputs so they are preserved
               when the browser constructs the GET URL.
        -->
        <form t-att-action="api_url" method="get">
            <t t-foreach="api_params" t-as="param">
                <input type="hidden" t-att-name="param" t-att-value="api_params[param]"/>
            </t>
        </form>
    </template>

</odoo>
